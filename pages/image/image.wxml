<!--pages/image/image.wxml-->

<!-- 1.image的基本使用 -->
<!-- 
重点：
  1.image组件既可以写成单标签，也可以写成双标签 
  2.image组件默认有自己的大小 320*240
  3.image组件是一个行内块级元素
-->
<!-- <image/> -->

<!-- 2.src: 本地地址(相对路径/绝对路径)/远程地址 -->
<image src="../../assets/test/1.jpg" />
<image src="/assets/test/1.jpg" />
<image src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg" />

<!-- 补充：显示相册中的图片 -->
<button bindtap="handleChooseAlbum">选中图片</button>
<image src="{{imagePath}}" />

<!-- 3.bindLoad: 监听图片加载完成 -->
<!-- lazylod: 图片懒加载 -->
<view>----------------------------------------------</view>
<image wx:for="{{1}}"
       src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg" 
       bindload="handleImageLoad"
       lazy-load/>

<!-- 4.show-menu-by-longpress: 长按图片识别小程序码 -->
<image src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg" 
       show-menu-by-longpress/>