<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>Hello Lorry\n</text>
<text>你好小程序\n</text>

<!-- 2.selectable: true 允许长按选中文本 -->
<!-- 默认情况下text文本长按是不能选中的 -->
<text selectable="{{true}}">Hello Justin\n</text>
<text selectable>Hello Justin\n</text>

<!-- 3.space: 决定文本空格大小 -->
<!-- emsp:一个中文字符大小 -->
<!-- ensp:半个中文字符大小 -->
<text>Hello Justin\n</text>
<text space="nbsp">Hello Justin\n</text>
<text space="emsp">Hello Justin\n</text>
<text space="ensp">Hello Justin\n</text>

<!-- 4.decode属性：是否解码文本 -->
<text decode="{{true}}">5 &gt; 3\n</text>
<text decode>5 &gt; 3</text>